<%= render "layouts/errors", :object => @user %>

<%= render "layouts/nav_bar" %>

  <h1> Sign up</h1>
  <%= form_for @user do |f| %>
  <%= f.label "Email" %><br>
  <%= f.text_field :email %><br>
  <%= f.label "Username" %><br>
  <%= f.text_field :name %><br>
  <%= f.label "Password" %><br>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit "Sign Up" %>
  <% end %>
